<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Magento\Backend\Block\Widget\Grid" name="customer.wallee_payment_tokens.edit.tab">
            <arguments>
                <argument name="dataSource" xsi:type="object"> Wallee\Payment\Model\ResourceModel\TokenInfo\Collection\Grid</argument>
                <argument name="id" xsi:type="string">tokenGrid</argument>
                <argument name="use_ajax" xsi:type="string">true</argument>
                <argument name="default_sort" xsi:type="string">created_at</argument>
                <argument name="grid_url" xsi:type="url" path="*/*/token">
                    <param name="_current">1</param>
                </argument>
            </arguments>
            <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="customer.wallee_payment_tokens.edit.tab.columnSet">
                <arguments>
                    <argument name="empty_text" xsi:type="string" translate="true">No Tokens Found</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer.wallee_payment_tokens.edit.tab.columnSet.token_id" as="token_id">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Token ID</argument>
                        <argument name="index" xsi:type="string">token_id</argument>
                        <argument name="type" xsi:type="string">number</argument>
                        <argument name="id" xsi:type="string">token_id</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer.wallee_payment_tokens.edit.tab.columnSet.name" as="name">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Name</argument>
                        <argument name="index" xsi:type="string">name</argument>
                        <argument name="id" xsi:type="string">name</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer.wallee_payment_tokens.edit.tab.columnSet.payment_method_name" as="payment_method_name">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Payment Method</argument>
                        <argument name="index" xsi:type="string">payment_method_name</argument>
                        <argument name="id" xsi:type="string">payment_method_name</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer.wallee_payment_tokens.edit.tab.columnSet.state" as="state">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">State</argument>
                        <argument name="index" xsi:type="string">state</argument>
                        <argument name="id" xsi:type="string">state</argument>
                        <argument name="renderer" xsi:type="string">Wallee\Payment\Block\Adminhtml\Customer\Tab\Renderer\State</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer.wallee_payment_tokens.edit.tab.columnSet.action" as="action">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Action</argument>
                        <argument name="index" xsi:type="string">token_id</argument>
                        <argument name="renderer" xsi:type="string">Magento\Customer\Block\Adminhtml\Grid\Renderer\Multiaction</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="actions" xsi:type="array">
                            <item name="delete" xsi:type="array">
                                <item name="caption" xsi:type="string" translate="true">Delete</item>
                                <item name="url" xsi:type="string">#</item>
                                <item name="onclick" xsi:type="string">return tokenControl.removeToken($token_id);</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="customer.wallee_payment_tokens.edit.tab.grid_js" as="grid.js">
                <arguments>
                    <argument name="js_object_name" xsi:type="string">tokenGridJsObject</argument>
                    <argument name="template" xsi:type="string">Wallee_Payment::customer/edit/tab/token.phtml</argument>
                </arguments>
            </block>
        </block>
    </container>
</layout>
